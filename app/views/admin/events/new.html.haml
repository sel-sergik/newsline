.col-xs-4
	%h2 New event
	= form_for @event, :url => admin_events_path, method: :post, :html => { :multipart => true } do |f|
		.form-group
			= f.label :name
			%br/
			= f.text_field :name, class: "form-control"
		.form-group
			= f.label :description
			%br/
			= f.text_area :description, class: "form-control"
		.form-group
			= f.label :category
			%br/
			= f.select :category_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }, class: "form-control"
		.form-group
			= f.label :event_date
			%br/
			= f.text_field :event_date, class: "form-control", :id => 'event_datepicker'
		%div= f.submit "Save", class: 'btn btn-primary'