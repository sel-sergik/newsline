.col-xs-4
	%h2 Edit category
	= form_for @category, :url => admin_category_path, method: :patch, :html => { :multipart => true } do |f|
		.form-group
			= f.label :name
			%br/
			= f.text_field :name, class: "form-control"
		.form-group
			= f.label :parent
			%br/
			= f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }, { include_blank: true }, class: "form-control"

		%div= f.submit "Edit", class: 'btn btn-primary'