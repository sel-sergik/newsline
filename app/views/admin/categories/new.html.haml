.col-xs-4
	%h2 New category
	= form_for @category, :url => admin_categories_path, method: :post, :html => { :multipart => true } do |f|
		.form-group
			= f.label :name
			%br/
			= f.text_field :name, class: "form-control"
		.form-group
			= f.label :parent
			%br/
			= f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }, { include_blank: true }, class: "form-control"

		%div= f.submit "Save", class: 'btn btn-primary'